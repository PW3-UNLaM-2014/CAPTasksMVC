@model CAPTasksMVC.Models.Carpetas
@{
    ViewBag.Title = "CrearCarpeta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div id="page-wrapper" class="col-md-6 col-md-offset-3">
        <h3 class="page-header">
            Nueva Carpeta</h3>
        @using (Html.BeginForm("CrearCarpeta", "Home", FormMethod.Post))
        {
            @Html.ValidationSummary(true)
    
            //CAMPO OCULTO PARA CAPTURAR EL ID DE USUARIO. 84 ES MI USUARIO CREADO, SE DEBERIA REEMPLAZAR POR SESSION["IdUsuario"]:
            <div>
                @Html.Hidden("idUsuario", 84)
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.Nombre)
                <br />
                @Html.EditorFor(model => model.Nombre)
                @Html.ValidationMessageFor(model => model.Nombre)
                <small class="text-info"><span class="glyphicon glyphicon-exclamation-sign"></span>El
                    nombre de carpeta es unico</small>
            </div> 
            <br />
   
            <div class="form-group">
                @Html.LabelFor(model => model.Descripcion)
                <br />
                @Html.EditorFor(model => model.Descripcion)
                @Html.ValidationMessageFor(model => model.Descripcion)
            </div>

            <p>
                <input type="submit" id="btnGuardarCarpeta" class="btn btn-success" value="Crear Carpeta" />
            </p>   
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
